<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard | Sneaker Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
        }
        .dashboard-card {
            margin-top: 60px;
        }
        .user-info p {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">SneakerStore</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <% if (user.role === 'admin') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">Admin Panel</a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/reviews">Reviews</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Dashboard Content -->
    <div class="container dashboard-card">
        <div class="card shadow-sm p-4">
            <h2 class="mb-3 text-center">Welcome, <%= user.username %>!</h2>

            <% if (messages && messages.length > 0) { %>
                <div class="alert alert-success">
                    <% messages.forEach(function(msg) { %>
                        <p><%= msg %></p>
                    <% }); %>
                </div>
            <% } %>

            <div class="user-info">
                <h5>Your Profile Details:</h5>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Contact:</strong> <%= user.contact %></p>
                <p><strong>Address:</strong> <%= user.address %></p>
                <p><strong>Role:</strong> <%= user.role %></p>
            </div>

            <div class="mt-4">
                <a href="/reviews" class="btn btn-outline-primary">View Shoe Reviews</a>
                <% if (user.role === 'admin') { %>
                    <a href="/admin" class="btn btn-primary ms-2">Go to Admin Panel</a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
